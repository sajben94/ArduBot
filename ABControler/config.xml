<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ABControler</name>
    <description>
        Aplikácia určená na ovládanie arduino robota cez Bluetooth.
    </description>
    <author email="sajbendarko94@gmail.com">
        Darko Šajben
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="Orientation" value="portrait" />
        <icon src="www/res/mdpi/ic_launcher.png" density="mdpi" />
    		<icon src="www/res/hdpi/ic_launcher.png" density="hdpi" />
    		<icon src="www/res/xhdpi/ic_launcher.png" density="xhdpi" />
    		<icon src="www/res/xxhdpi/ic_launcher.png" density="xxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
